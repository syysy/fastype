<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#818181"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageBurger"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_burger"
        android:layout_marginStart = "20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFastype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fastype"
        android:textSize="25sp"
        android:layout_marginStart = "20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageBurger"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageProfil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar"
        android:layout_marginTop = "40dp"
        android:layout_marginStart = "30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <ImageView
        android:id="@+id/imageCountry"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar"
        android:layout_marginStart = "20dp"
        app:layout_constraintStart_toEndOf="@+id/imageProfil"
        app:layout_constraintTop_toTopOf="@+id/imageProfil" />

    <TextView
        android:id="@+id/text_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank : "
        android:textSize="20sp"
        android:layout_marginStart = "30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageCountry"
        app:layout_constraintStart_toEndOf="@+id/imageCountry"
        app:layout_constraintTop_toTopOf="@+id/imageProfil"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textPseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Pseudo"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageProfil"
        app:layout_constraintStart_toEndOf="@+id/imageProfil" />

    <ImageView
        android:id="@+id/imageBrush"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_brush"
        app:layout_constraintBottom_toBottomOf="@+id/textPseudo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textPseudo"
        app:layout_constraintTop_toTopOf="@+id/textPseudo" />

    <TextView
        android:id="@+id/textMoyenne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mean : "
        android:layout_marginTop = "20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/imageProfil"
        app:layout_constraintTop_toBottomOf="@+id/imageProfil"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textNbGameJouees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Played : "
        android:textSize="20sp"
        android:layout_marginTop = "20dp"
        app:layout_constraintStart_toStartOf="@+id/imageProfil"
        app:layout_constraintTop_toBottomOf="@+id/textMoyenne"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textCompteCreationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Created : "
        android:textSize="20sp"
        android:layout_marginTop = "20dp"
        app:layout_constraintStart_toStartOf="@+id/imageProfil"
        app:layout_constraintTop_toBottomOf="@+id/textNbGameJouees"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>



